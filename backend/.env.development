# FX Sign Backend - Development Environment
# Docker Compose PostgreSQL接続設定

NODE_ENV=development
PORT=3002

# Database Configuration
DATABASE_URL=postgresql://fxuser:fxpass123@localhost:5432/fx_sign_db

# Individual DB Config (for services that don't use DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fx_sign_db
DB_USER=fxuser
DB_PASSWORD=fxpass123

# JWT Settings
JWT_SECRET=development_jwt_secret_key_please_change_in_production

# API Keys (開発用 - 本番では必ず変更)
ALPHAVANTAGE_API_KEY=demo_key
GMO_API_KEY=demo_key
GMO_SECRET_KEY=demo_secret

# CORS Settings
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# WebSocket Settings
WS_PORT=3002